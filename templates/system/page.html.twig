{% endblock %}
{% endif %}

{# Updates #}
{% if page.updates %}
{{ attach_library('gcs_bootstrap/updates') }}
{% block updates %}
  <div id="updates" class="gcs-panel panel-updates panel-bg-fixed">
    <div class="gcs-content {{ container }}">
      <div class="row">
        {{ page.updates }}
