      <div class="row">
        {{ page.subscribe }}
      </div>
    </div>
  </div>
{% endblock %}
{% endif %}

{# Footer #}
<footer class="footer" role="contentinfo">

  {# Footer Foundation #}
  {% if page.foundation %}
    {% block foundation %}
    <div class="footer-foundation panel-light">
      <div class="{{ container }}">
        <div class="row">
          {{ page.foundation }}
        </div>
      </div>
    </div>
    {% endblock %}
  {% endif %}

  {# Footer Colophon #}
  {% if page.colophon %}
    {% block colophon %}
    <div class="footer-colophon panel-dark">
      <div class="{{ container }}">
        <div class="row">
          {{ page.colophon }}
        </div>
      </div>
    </div>
    {% endblock %}
  {% endif %}

  </div>
</footer>
